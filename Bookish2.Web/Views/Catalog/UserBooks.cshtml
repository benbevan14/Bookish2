@model List<Bookish2.Web.Models.CopyModel>
    
<div>
    @if (@Model.Count == 0)
    {
        <p>No books on loan</p>
    }
    else
    {
        <table>
            <caption>Borrowed Books</caption>
            <tr>
                <th scope="col">Copy ID</th>
                <th scope="col">Book Title</th>
                <th scope="col">Due Date</th>
            </tr>
            @foreach (var copy in @Model)
            {
                <tr>
                    <td>@copy.Id</td>
                    <td>@copy.Title</td>
                    <td>@copy.DueDate</td>
                </tr>
            }
        </table>
    }
</div>